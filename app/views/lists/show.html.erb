<h1>These movies are just <strong><%= @list.name %></strong></h1>
<ul>
<% @movies.each do |movie| %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <li> <%= movie.title %> - <%= movie.overview %> (<%= bookmark.comment %>) </li>
<% end %>
</ul>

<%= link_to "Back", lists_path, class: "btn-sm btn-dark" %>
<%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn-sm btn-dark" %>
<%= link_to "Show all movies",  movies_path, class: "btn-sm btn-dark" %>
